{
  "name": "root",
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "ignoreChanges": ["package-lock.json"]
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "npmClient": "npm"
}
